{
    "name": "classflow-pro/classflow-pro",
    "description": "ClassFlow Pro - Pilates Studio Manager WordPress Plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "ClassFlow Pro",
            "email": "support@classflowpro.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mysqli": "*",
        "ext-openssl": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ClassFlowPro\\": "includes/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress --extensions=php includes/",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php includes/",
        "lint": "composer run phpcs",
        "lint:fix": "composer run phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable"
}